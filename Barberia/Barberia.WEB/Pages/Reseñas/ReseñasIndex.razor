@page "/Reseñas"
@using Barberia.WEB.Repositories;
@using Barberia.Shared.Entities
@using Microsoft.AspNetCore.Authorization;

@inject IRepository repository
@inject NavigationManager navigationManager
@inject SweetAlertService swal
@attribute [Authorize(Roles = "Admin,Usuario,Barbero")]

<h3>Reseñas</h3>


<AuthorizeView Roles="Usuario">
    <Authorized>
        <div class="mb-3">
            <a class="btn btn-outline-dark" href="/reseñas/create">Añadir reseña</a>
        </div>
    </Authorized>
</AuthorizeView>

<GenericList MyList="Reseñas">

    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Comentario</th>
                    <th>Calificación</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reseña in Reseñas!)
                {
                    <tr>
                        <td>
                            @reseña.Comentario
                        </td>
                        <td>
                            @reseña.Calificacion
                        </td>
                        <AuthorizeView Roles="Usuario">
                            <Authorized>
                                <td>
                                    <a href="/reseñas/edit/@reseña.Id" class="btn btn-outline-secondary">Editar</a>
                                    <button class="btn btn-outline-danger" @onclick=@(() => Delete(reseña))>Borrar</button>
                                </td>
                            </Authorized>
                        </AuthorizeView>
                    </tr>
                }
            </tbody>
        </table>

    </Body>

</GenericList>

@code {
    public List<Reseña>? Reseñas { get; set; }

    protected async override Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        var responseHppt = await repository.Get<List<Reseña>>("api/reseñas");
        Reseñas = responseHppt.Response!;
    }

    private async Task Delete(Reseña reseña)
    {
        var result = await swal.FireAsync(new SweetAlertOptions
            {
                Title = "Confirmación",
                Text = "¿Esta seguro que quieres borrar el registro?",
                Icon = SweetAlertIcon.Question,
                ShowCancelButton = true
            });

        var confirm = string.IsNullOrEmpty(result.Value);

        if (confirm)
        {
            return;
        }

        var responseHTTP = await repository.Delete($"api/reseñas/{reseña.Id}");

        if (responseHTTP.Error)
        {
            if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("/");
            }
            else
            {
                var mensajeError = await responseHTTP.GetErrorMessage(); //debe ser Async
                await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
            }
        }
        else
        {
            await Load();
        }
    }
}
