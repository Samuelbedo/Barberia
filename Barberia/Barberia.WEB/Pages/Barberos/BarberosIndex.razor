@page "/Barberos"
@using Barberia.WEB.Repositories;
@using Barberia.Shared.Entities

@inject IRepository repository
@inject NavigationManager navigationManager
@inject SweetAlertService swal


<h2>Nuestros barberos</h2>


<div class="mb-3">
    <a class="btn btn-primary" href="/barberos/create">Añadir barbero</a>
</div>

<GenericList MyList="Barberos">

    <Body>
        <table class="table table-striped">
            <thead>
                <tr>

                    <th>Nombre</th> 
                    <th>Especialidad</th>
                    <th>Teléfono</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var barbero in Barberos!)
                {
                    <tr>
                        <td>
                            @barbero.Nombre
                        </td>
                         <td>
                            @barbero.Especialidad
                        </td>
                        <td>
                            @barbero.Telefono
                        </td>
                        <td>
                            <a href="/barberos/edit/@barbero.Id" class="btn btn-warning">Editar</a>
                            <button class="btn btn-danger" @onclick=@(() => Delete(barbero))>Borrar</button>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </Body>

</GenericList>

@code {
    public List<Barbero>? Barberos { get; set; }

    protected async override Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        var responseHppt = await repository.Get<List<Barbero>>("api/barberos");
        Barberos = responseHppt.Response!;
    }

    private async Task Delete(Barbero barbero)
    {
        var result = await swal.FireAsync(new SweetAlertOptions
            {
                Title = "Confirmación",
                Text = "¿Esta seguro que quieres borrar el registro?",
                Icon = SweetAlertIcon.Question,
                ShowCancelButton = true
            });

        var confirm = string.IsNullOrEmpty(result.Value);

        if (confirm)
        {
            return;
        }

        var responseHTTP = await repository.Delete($"api/barberos/{barbero.Id}");

        if (responseHTTP.Error)
        {
            if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("/");
            }
            else
            {
                var mensajeError = await responseHTTP.GetErrorMessage(); //debe ser Async
                await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
            }
        }
        else
        {
            await Load();
        }
    }

}