@page "/Facturaciones"
@using Barberia.WEB.Repositories;
@using Barberia.Shared.Entities

@inject IRepository repository
@inject NavigationManager navigationManager
@inject SweetAlertService swal

<h3>Registro de caja</h3>

<div class="mb-3">
    <a class="btn btn-primary" href="/facturaciones/create">Nuevo pago</a>
</div>

<GenericList MyList="Facturaciones">

    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Monto</th>
                    <th>Metodo de pago</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var facturacion in Facturaciones!)
                {
                    <tr>
                        <td>
                            @facturacion.Fecha
                        </td>
                        <td>
                            @facturacion.Monto
                        </td>
                        <td>
                            @facturacion.MetodoPago
                        </td>
                        <td>
                            <button class="btn btn-danger" @onclick=@(() => Delete(facturacion))>Borrar</button>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </Body>

</GenericList>

@code {
    public List<Facturacion>? Facturaciones { get; set; }

    protected async override Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        var responseHppt = await repository.Get<List<Facturacion>>("api/facturaciones");
        Facturaciones = responseHppt.Response!;
    }

    private async Task Delete(Facturacion facturacion)
    {
        var result = await swal.FireAsync(new SweetAlertOptions
            {
                Title = "Confirmación",
                Text = "¿Esta seguro que quieres borrar el registro?",
                Icon = SweetAlertIcon.Question,
                ShowCancelButton = true
            });

        var confirm = string.IsNullOrEmpty(result.Value);

        if (confirm)
        {
            return;
        }

        var responseHTTP = await repository.Delete($"api/facturaciones/{facturacion.Id}");

        if (responseHTTP.Error)
        {
            if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("/");
            }
            else
            {
                var mensajeError = await responseHTTP.GetErrorMessage(); //debe ser Async
                await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
            }
        }
        else
        {
            await Load();
        }
    }
}
