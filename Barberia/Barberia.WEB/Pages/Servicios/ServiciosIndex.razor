@page "/Servicios"
@using Barberia.WEB.Repositories;
@using Barberia.Shared.Entities

@inject IRepository repository
@inject NavigationManager navigationManager
@inject SweetAlertService swal


<h2>Nuestros servicios</h2>


<div class="mb-3">
    <a class="btn btn-primary" href="/servicios/create">Añadir servicio</a>
</div>

<GenericList MyList="Servicios">

    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Descripción</th>
                    <th>Precio</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var servicio in Servicios!)
                {
                    <tr>
                        <td>
                            @servicio.Descripcion
                        </td>
                        <td>
                            @servicio.Precio
                        </td>
                        <td>
                            <a href="/servicios/edit/@servicio.Id" class="btn btn-warning">Editar</a>
                            <button class="btn btn-danger" @onclick=@(() => Delete(servicio))>Borrar</button>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </Body>

</GenericList>

@code {
    public List<Servicio>? Servicios { get; set; }

    protected async override Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        var responseHppt = await repository.Get<List<Servicio>>("api/servicios");
        Servicios = responseHppt.Response!;
    }

    private async Task Delete(Servicio servicio)
    {
        var result = await swal.FireAsync(new SweetAlertOptions
            {
                Title = "Confirmación",
                Text = "¿Esta seguro que quieres borrar el registro?",
                Icon = SweetAlertIcon.Question,
                ShowCancelButton = true
            });

        var confirm = string.IsNullOrEmpty(result.Value);

        if (confirm)
        {
            return;
        }

        var responseHTTP = await repository.Delete($"api/servicios/{servicio.Id}");

        if (responseHTTP.Error)
        {
            if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("/");
            }
            else
            {
                var mensajeError = await responseHTTP.GetErrorMessage(); //debe ser Async
                await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
            }
        }
        else
        {
            await Load();
        }
    }

}